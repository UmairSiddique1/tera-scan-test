<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_marginEnd="16dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_homescreenrounded"
            android:padding="18dp" />

        <TextView
            android:id="@+id/tv_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pro"
            android:textSize="8sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#2E2E2E"
            android:background="@drawable/bg_premium"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="3dp"
            android:visibility="gone"
            android:paddingBottom="3dp"
            android:layout_alignTop="@id/iv_tools"
            android:layout_alignEnd="@id/iv_tools" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tools"
    android:gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#2A2A2A" />
</LinearLayout>
