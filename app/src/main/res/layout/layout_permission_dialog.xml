<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/bg_permission_dialog"
    android:backgroundTint="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/textview_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#0D0D0D"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_desc"
        android:gravity="center"
        android:layout_below="@id/textview_title"
        android:textColor="#858585"
        android:textSize="12sp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/roboto_regular"
 />
    <View
        android:layout_width="match_parent"
    android:layout_height="1dp"
        android:layout_below="@id/textview_desc"
        android:layout_marginTop="17dp"
    android:background="#CCCCCC"
    android:id="@+id/verticalLine" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/verticalLine">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_do_not_allow"
            android:layout_centerVertical="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="467dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"

            android:textColor="#A6A6A6"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCCCCC"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="61dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/tv_allow"

            android:textColor="#A36DFF"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>