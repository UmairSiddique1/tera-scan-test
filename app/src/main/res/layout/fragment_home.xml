<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    tools:context=".ui.HomeFragment">



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_tools"
        android:layout_marginTop="16dp"
      />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_1"
            android:layout_marginTop="24dp"
            android:layout_below="@id/rv_tools">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:text="@string/recent_files"
                android:textColor="#0D0D0D"
                android:fontFamily="@font/roboto_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_view_all"
                android:text="@string/view_all"
                android:layout_centerVertical="true"
                android:textColor="#BF9AFE"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:id="@+id/rv_files"
        android:layout_below="@+id/rl_1"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_1"
        android:id="@+id/nestedSV">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:id="@+id/ll_documentscan">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_docScan"
            android:src="@drawable/ic_docscan_logo"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_first_document"
            android:textColor="#5E5E5E"
            android:id="@+id/tv_addFirstDoc"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_downarrow"
            android:id="@+id/down_arrow"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>